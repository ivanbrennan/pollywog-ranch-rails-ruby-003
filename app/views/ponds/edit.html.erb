<h1>Edit <%= @pond.name %></h1>
<%= form_for @pond do |f| %>
  <%= f.label :name %>: <%= f.text_field :name, :placeholder => @pond.name, :value => nil %><br>
  <%= f.label :water_type %>: <%= f.text_field :water_type, :placeholder => @pond.water_type, :value => nil %><br>

  <%= f.submit %>
<% end %><br>
<%= link_to("Cancel", ponds_path) %>
