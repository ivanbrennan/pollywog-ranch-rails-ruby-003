<h1>Edit <%= @frog.name %></h1>
<%= form_for @frog do |f| %>
  <%= f.label :name %>: <%= f.text_field :name, :placeholder => @frog.name, :value => nil %><br>
  <%= f.label :color %>: <%= f.text_field :color, :placeholder => @frog.color, :value => nil %><br>
  <%= f.label :lives %>: <%= select(:frog, :pond_id, Pond.all.collect {|p| [ p.name, p.id ] }) %><br>

  <%= f.submit %>
<% end %><br>
<%= link_to("Cancel", frogs_path) %>
